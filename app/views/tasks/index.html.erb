<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
      <li>
        <%= task.completed %>
        <%= link_to task.title, task_path(task) %>
        <%# findet durch task in klammern automatisch die id %>
        <%= link_to "Delete", task_path(task) ,data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>

    <% end %>
</ul>

<%= link_to "Create Task", tasks_new_path %>
